{
  "name": "Python HoloViz Panel Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=/home/${localEnv:USER}/.ssh,target=/home/vscode/.ssh,type=bind"
  ],
  "customizations": {
    "mounts": [
      "source=/home/${localEnv:USER}/code,target=/home/vscode/all_the_codes,type=bind"
    ],
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "ms-python.mypy-type-checker",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "GitHub.copilot",
        "GitHub.copilot-labs",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        },
        "python.analysis.typeCheckingMode": "standard",
        // Mount the local ssh directory to allow SSH access to the container
      }
    }
  },
  "remoteUser": "vscode"
}